<Window
	x:Class="RevToGOSTv0.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dd="urn:gong-wpf-dragdrop"
	xmlns:local="clr-namespace:RevToGOSTv0"
	mc:Ignorable="d" 
	Title="MainWindow" Height="500" Width="600"
	ResizeMode="CanMinimize" 
	WindowStartupLocation="CenterOwner">

	<Grid>
		<!--
		<Grid>
			<TextBlock Text="Доступные категории" Margin="10,10,244,387"></TextBlock>
			<ListBox x:Name="AvailableCategories" Margin="10,33,294,145"></ListBox>
			<TextBlock Text="Выбрано" Margin="250,10,43,387" RenderTransformOrigin="-4.875,0.722"></TextBlock>
			<ListBox x:Name="PickedCategories" Margin="250,33,43,145"></ListBox>
			<Button Name="AddCategory" Content="&gt;" HorizontalAlignment="Left" Margin="215,118,0,0" VerticalAlignment="Top" Width="20" Height="30" RenderTransformOrigin="-0.6,0.733"/>
			<Button Name="RemoveCategory" Content="&lt;" HorizontalAlignment="Left" Margin="215,164,0,0" VerticalAlignment="Top" Width="20" Height="30"/>
		</Grid>
		-->

		<TabControl
			TabStripPlacement="Left">

			<TabItem
				Header="Выбор категории">
				<Grid>
					<TextBlock Text="Доступные категории" Margin="19,20,303,416"></TextBlock>
					<ListBox
						x:Name="AvailableCategories"
						Margin="19,49,283,69"
						ItemsSource="{Binding}">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Name}"/>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
					<TextBlock Text="Выбрано" Margin="236,20,86,416" RenderTransformOrigin="-4.875,0.722"></TextBlock>
					<ListBox x:Name="PickedCategories" Margin="236,49,66,69"></ListBox>
					<Button Name="AddCategory" Click="AddCategory_Click" Content="&gt;" HorizontalAlignment="Left" Margin="205,150,0,0" VerticalAlignment="Top" Width="20" Height="30" RenderTransformOrigin="-0.6,0.733"/>
					<Button Name="RemoveCategory" Content="&lt;" HorizontalAlignment="Left" Margin="205,196,0,0" VerticalAlignment="Top" Width="20" Height="30"/>
					<Button Name="Export1" Click="Export_Click" Content="Export" Margin="333,427,66,17"/>
				</Grid>
			</TabItem>

			<TabItem Header="Выбор элементов" >
				<Grid>
					<TextBlock Text="Доступные элементы" Margin="19,20,303,416"></TextBlock>
					<ListBox x:Name="AvailableElements" Margin="19,49,283,69"></ListBox>
					<TextBlock Text="Выбрано" Margin="236,20,86,416" RenderTransformOrigin="-4.875,0.722"></TextBlock>
					<ListBox x:Name="PickedElements" Margin="236,49,66,69"></ListBox>
					<Button Name="Export2" Click="Export_Click" Content="Export" Margin="333,427,66,17"/>
				</Grid>
			</TabItem>

			<TabItem Header="Details" />
		</TabControl>

	</Grid>

	<Window.Resources>
	</Window.Resources>

</Window>
