							   Padding="3"/>

					<ComboBox x:Name="Dop1ComboBox"
							  Margin="140,165,0,0"
							  Height="25" Width="210"
							  VerticalAlignment="Top" HorizontalAlignment="Left"
							  SelectedIndex="3"
